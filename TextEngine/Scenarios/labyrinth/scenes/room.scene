function north(c)
	generate_room(get_x(), get_y() + 1);
	change_room(c, get_x(), get_y() + 1);
end

function east(c)
	generate_room(get_x() + 1, get_y());
	change_room(c, get_x() + 1, get_y());
end

function south(c)
	generate_room(get_x(), get_y() - 1);
	change_room(c, get_x(), get_y() - 1);
end

function west(c)
	generate_room(get_x() - 1, get_y());
	change_room(c, get_x() - 1, get_y());
end



