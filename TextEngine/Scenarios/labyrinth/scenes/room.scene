function describe()
	say("X: ",get_x(),", Y: ",get_y());
	shape_var_name = concat( get_name() ,"_shape");
	shape = get_global_var( shape_var_name );
	say("SHAPE VAR NAME: ", shape_var_name);
	say("SHAPE: ", shape);
	say(concat("NORTH: ",room_open_north(get_name())));
	say(concat("EAST: ",room_open_east(get_name())));
	say(concat("SOUTH: ",room_open_south(get_name())));
	say(concat("WEST: ",room_open_west(get_name())));
	say("Unexplored Halls: ", get_open_halls());
	say("Rooms Generated: ", get_global_var("rooms_generated"));
end

